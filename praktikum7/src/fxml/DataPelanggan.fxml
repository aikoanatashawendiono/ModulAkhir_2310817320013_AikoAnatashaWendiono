<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Input Fields -->
        <VBox layoutX="10" layoutY="10" spacing="10">
            <HBox spacing="10">
                <Label text="Nama:" />
            </HBox>
             <TextField fx:id="txtNama" prefHeight="25.0" prefWidth="276.0" />
            <HBox spacing="10">
                <Label text="Email:" />
            </HBox>
             <TextField fx:id="txtEmail" prefWidth="200" />
            <HBox spacing="10" />
            <HBox spacing="10" />
        </VBox>

        <!-- TableView for Data Pelanggan -->
        <TableView fx:id="tablePelanggan" layoutY="151.0" prefHeight="352.0" prefWidth="672.0">
            <columns>
                <TableColumn fx:id="colPelangganId" prefWidth="100" text="Pelanggan ID" />
                <TableColumn fx:id="colNama" prefWidth="200" text="Nama" />
                <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
                <TableColumn fx:id="colTelepon" prefWidth="150" text="Telepon" />
            </columns>
        </TableView>
          <Button fx:id="btnAddPelanggan" layoutX="364.0" layoutY="100.0" prefHeight="25.0" prefWidth="82.0" text="Tambah" />
          <Button fx:id="btnEditPelanggan" layoutX="456.0" layoutY="100.0" prefHeight="25.0" prefWidth="82.0" text="Edit" />
          <Button fx:id="btnDeletePelanggan" layoutX="548.0" layoutY="100.0" prefHeight="25.0" prefWidth="82.0" text="Hapus" />
          <Label layoutX="365.0" layoutY="11.0" text="Telepon:" />
          <TextField fx:id="txtTelepon" layoutX="364.0" layoutY="37.0" prefHeight="25.0" prefWidth="266.0" />
    </children>
</AnchorPane>
